<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.numbergame" android:versionCode="1" android:versionName="1.0">
	<uses-sdk android:minSdkVersion="8" />

	<application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
		<activity android:name=".CrazyPuzzle"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".MenuScreen" android:label="@string/app_name">
			<intent-filter>
				<action android:name="com.numbergame.MenuScreen" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".MathPuzzleActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="com.numbergame.CrazyPuzzleActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".HelloListViewActivity" android:label="@string/app_name">
			<intent-filter>
			    <action android:name="com.numbergame.HelloListViewActivity" />
			    <category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>    
		</activity>
	</application>
</manifest>