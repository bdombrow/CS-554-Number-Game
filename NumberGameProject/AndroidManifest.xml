 <manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.numbergame" android:versionCode="1" android:versionName="1.0">
	<uses-sdk android:minSdkVersion="8" />

	<application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
		<activity android:name=".NumberGameProjectActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".MainScreenProjectActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="com.numbergame.MenuScreen" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".PuzzleProjectActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="com.numbergame.PuzzleProjectActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".NumbersProjectActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="com.numbergame.NumbersProjectActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name=".OptionActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="com.numbergame.OptionActivity" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
			</application>
</manifest>