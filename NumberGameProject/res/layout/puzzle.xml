<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<com.numbergame.PuzzleView
		android:id="@+id/puzzle"
		android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:background="@drawable/pic_baboon"
    	tileSize="24" />
	
	<RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent">
		<TextView 
			android:textColor="#ffffffff" 
			android:textSize="18sp" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:visibility="visible" 
			android:id="@+id/score" 
			android:text="@string/score" 
			android:layout_alignParentTop="true" 
			android:layout_alignLeft="@+id/scrambleButton" 
			android:layout_marginTop="10dp"/>
			
		<Button 
			android:id="@+id/scrambleButton" 
			android:text="Start" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:layout_marginBottom="5dp" 
			android:layout_marginLeft="5dp" 
			android:layout_alignParentBottom="true"/>
			
		<Button 
			android:id="@+id/unscrambleButton" 
			android:text="New" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content" 
			android:layout_alignBottom="@+id/scrambleButton" 
			android:layout_alignParentRight="true" 
			android:layout_marginRight="5dp"/>
	</RelativeLayout>
</FrameLayout>
