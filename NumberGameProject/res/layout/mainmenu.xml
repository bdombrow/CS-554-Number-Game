<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"   
 android:background="@drawable/pic_crazypuzzle" 
 android:layout_height="fill_parent"   
  android:layout_width="fill_parent" 
  android:padding="30dip"   
   android:orientation="horizontal">
   <LinearLayout android:orientation="vertical"   
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"    
       android:layout_gravity="bottom">     
        <TableRow android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:id="@+id/tableRow1" 
        android:gravity="bottom">    	

        <Button
            android:id="@+id/Equation"
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:layout_gravity="bottom"
            android:background="@drawable/pic_math_button"
            android:paddingLeft="10dip"
            android:textColor="#FF0000"
            android:textSize="20dip" />

               	<Button
               	    android:id="@+id/Numbers"
               	    android:layout_width="75dip"
               	    android:layout_height="75dip"
               	    android:layout_marginLeft="70dip"
               	    android:background="@drawable/pic_number_button"
               	    android:paddingLeft="10dip"
               	    android:textColor="#ff0000"
               	    android:textColorHighlight="#00FF00" />
	
               		    </TableRow>	
               		    <TableRow android:layout_height="wrap_content" 
               		    android:layout_width="wrap_content" 
               		    android:layout_marginLeft="50dip" 	
               		    android:id="@+id/tableRow2" 
               		    android:gravity="bottom"   
               		    >
               		    <Button android:paddingLeft="10dip"
               		     android:id="@+id/Exit" 
               		     android:layout_height="75dip" 
               		     android:layout_width="75dip"
              		      android:text="option"/>
               		      	
               		    	     <Button  
               		    	     android:id="@+id/Help"	               		    	      
               		    	      android:layout_height="75dip"  
               		    	       android:paddingLeft="10dip"  
               		    	       android:layout_marginLeft="70dip"
               		    	       android:background="@drawable/pic_ninfo"
               		    	       />	
               		    	       </TableRow>
               		    	       </LinearLayout>
               		    	       </LinearLayout>
               		    	       