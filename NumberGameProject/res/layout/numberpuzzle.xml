<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.numbergame.NumberPuzzleView
        android:id="@+id/numberpuzzle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pic_big1"
        tileSize="24" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/scrambleButton"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="@string/score"
            android:textColor="#ffffffff"
            android:textSize="24sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/scrambleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="5dp"
            android:text="Start" />
         <Button
            android:id="@+id/unscrambleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="New" />

        <Button
            android:id="@+id/wizardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_alignParentRight="true" 
            android:layout_alignBottom="@+id/unscrambleButton"
            android:layout_marginRight="5dp"
            android:text="Puzzle\nWizard" />
    </RelativeLayout>

</FrameLayout>